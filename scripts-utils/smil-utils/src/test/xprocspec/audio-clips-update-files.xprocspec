<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:d="http://www.daisy.org/ns/pipeline/data"
               script="../../main/resources/xml/audio-clips-update-files.xpl">
    
    <x:scenario label="audio-clips-update-files">
        <x:call step="px:audio-clips-update-files">
            <x:input port="source">
                <x:document type="inline" xml:base="file:/temp/">
                    <d:audio-clips>
                        <d:clip idref="A" clipBegin="0:00:00.000" clipEnd="0:00:00.565" src="part_1.mp3"/>
                        <d:clip idref="B" clipBegin="0:00:00.000" clipEnd="0:00:00.578" src="part_2.mp3"/>
                        <d:clip idref="C" clipBegin="0:00:00.000" clipEnd="0:00:00.578" src="part_3.mp3"/>
                    </d:audio-clips>
                </x:document>
            </x:input>
            <x:input port="mapping">
                <x:document type="inline" xml:base="file:/out/EPUB/">
                    <d:fileset>
                        <d:file href="audio/part_1.mp3" original-href="file:/temp/part_1.mp3"/>
                        <d:file href="audio/part_2.mp3" original-href="file:/temp/part_2.mp3"/>
                        <d:file href="audio/part_3.mp3" original-href="file:/temp/part_3.mp3"/>
                    </d:fileset>
                </x:document>
            </x:input>
        </x:call>
        <x:context label="the result port">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect type="compare" label="the result port">
            <x:document type="inline">
                <d:audio-clips>
                    <d:clip idref="A" clipBegin="0:00:00.000" clipEnd="0:00:00.565" src="audio/part_1.mp3"/>
                    <d:clip idref="B" clipBegin="0:00:00.000" clipEnd="0:00:00.578" src="audio/part_2.mp3"/>
                    <d:clip idref="C" clipBegin="0:00:00.000" clipEnd="0:00:00.578" src="audio/part_3.mp3"/>
                </d:audio-clips>
            </x:document>
        </x:expect>
        <x:expect label="the base URI of the result document should be the base URI of the mapping document"
                  type="xpath" test="base-uri(/*)" equals="'file:/out/EPUB/'"/>
    </x:scenario>
    
</x:description>
